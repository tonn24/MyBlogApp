<% include ./partials/header.ejs %>

<div id="newForm" class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div>
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div>
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div>
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="body"><%= blog.body %></textarea>
        </div> 
        <input class="ui brown button" id="button" type="submit">
    </form>
</div>

<% include ./partials/footer.ejs %>